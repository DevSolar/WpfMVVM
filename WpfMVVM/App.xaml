<!-- Top-level application definition, auto-generated by Visual Studio.   -->
<!-- Default is to place MainWindow.xaml* on the top level,  -->
<!-- but it is the only View class, so it was pushed to View -->
<!-- and the StartupUri reference was adjusted accordingly.  -->
<Application x:Class="WpfMVVM.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WpfMVVM"
             StartupUri="View/MainWindow.xaml">
    <!-- In order to keep Styles seperate from the other XAML code, and   -->
    <!-- separate from each other, each style is defined in its own file. -->
    <!-- Since we do not want to manually add references to those style   -->
    <!-- files in every XAML, we merge them into our ResourceDictionary.  -->
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="Styles/TextBoxStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
